<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel padding">
        <header class="panel-heading bgcolor">
          <bold><h4>Edit BDE Details</h4></bold>
        </header>
          <%= form_for @sale, :url =>sales_bd_update_user_sales_consultants_path(current_user ,:sale => @sale.id) do |f| %>

              <div class="panel-body">
                 <div class=" form">
                   <% if @sale.errors.any? %>
                     <div id="error_explanation" class ="alert alert-danger">
                       <ul>
                        <% @sale.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                       </ul>
                    </div>
                   <% end %>
                      <div class="col-lg-9">
                         <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                           <div class="form-group ">
                              <label class="col-lg-3 control-label"> Sales Id:* </label>
                                 <div class="col-lg-8">
                                    <%= f.text_field :sales_id, :class=>"form-control", :required => true %><br/>
                                  </div>
                           </div>

                           <div class="form-group ">
                            <label class="col-lg-3 control-label"> Skype Id:* </label>
                             <div class="col-lg-8">
                               <%= f.text_field :skype_id, :value => EmployeeDetail.skype_search(current_user) ,:class=>"form-control" %><br/>
                             </div>
                           </div>

                          <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-8">
                              <center><button class="btn btn-danger" type="submit">Save Changes</button>
                              <button class="btn btn-warning" type="back">Back</button></center>
                            </div>
                          </div>
                     </div>
                  </form>
                </div>
              <% end %>
          </div>
        </div>
      </section>
    </div>
  </section>
</section>
