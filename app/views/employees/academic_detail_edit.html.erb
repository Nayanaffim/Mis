
<section id="main-content">
 <section class="wrapper">
  <section class="panel">
   <div class="col-lg-12">
    <section class="panel padding">
     <header class="panel-heading"><h4>Edit Your Details</h4></header>
      <%= form_for @academic, :url => academic_detail_update_user_employees_path(current_user, :academic => @academic.id) do |f| %>
        <div class=" col-lg-2"></div>
         <div class="panel-body">
          <div class="form">
           <% if @academic.errors.any? %>
            <div id="error_explanation" class ="alert alert-danger">
             <ul>
              <% @academic.errors.full_messages.each do |message| %>
               <li><%= message %></li>
              <% end %>
             </ul>
            </div>
           <% end %>
           <div class=" form col-lg-12">
            <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
              <div class="form-group ">
                <label class="col-lg-2 control-label"> Course Name* </label>
                <div class="col-lg-10">
                  <%= f.text_field :course, :class=>"form-control", :id => "text-transform",:required => true %><br />
                </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-2 control-label"> University/Board* </label>
                <div class="col-lg-10">
                  <%= f.text_field :university, :id => "text-transform", :class=>"form-control", :required => true %><br />
                </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-2 control-label"> Year Of Passing*</label>
                <div class="col-lg-10">
                  <%= f.date_select :passing_year ,{order: [:year], prompt: {  year: 'Select year' }, start_year: Date.today.year - 0, end_year: Date.today.year - 100} , {required: true}%>
                  <br /><br />
                </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-2 control-label"> Percentage* </label>
                <div class="col-lg-10">
                  <%= f.text_field :percentage,  :class=>"form-control", :required => true  %><br />
                </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-2 control-label"> Stream* </label>
                <div class="col-lg-10">
                  <%= f.text_field :stream,  :class=>"form-control", :required => true  %><br />
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <center>
                    <button class="btn btn-shadow btn-danger" type="submit">Update</button>
                  </center>
                </div>
            </div>
          </form>
        </div>
      </div>
      <% end %>
    </div>
    </section>
  </section>
</section>

