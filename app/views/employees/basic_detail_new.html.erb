<section id="main-content">
<section class="wrapper">
  <section class="panel">
      <div class="col-lg-12">
        <section class="panel padding">
          <header  class="panel-heading"><h4>Fill Your Details</h4></header>
          <%= form_for @employee, :url => basic_detail_create_user_employees_path(current_user), :method => "post",:html => { :multipart => true }  do |f| %>
            <div class="panel-body">
              <div class="form">
                <% if @employee.errors.any? %>
                  <div id="error_explanation" class ="alert alert-danger">
                    <ul>
                      <% @employee.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <%end%>
                <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                  <div class="col-lg-12">
                    <h4> Basic Details </h4>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label">Profile picture</label>
                      <div class="col-lg-10">
                        <img src="/assets/alt_img.png" class="image4">
                        <%= f.file_field :avatar,:id =>"padding"%><br/>
                      </div>
                    </div>

                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> First Name *</label>
                      <div class="col-lg-10">
                       <b> <%= f.text_field :firstname, :class=>"form-control", :value => current_user.firstname.capitalize,:readonly => true %></b><br/>
                      </div>
                    </div>
               
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Last Name *</label>                
                      <div class="col-lg-10">
                        <b><%= f.text_field :lastname, :class=>"form-control" ,:value => current_user.lastname.capitalize,:readonly => true %></b><br/>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-2 control-label"> Blood Group </label>
                      <div class="col-lg-10">
                        <%= f.text_field :blood_group, :class=>"form-control" %><br/>
                      </div>
                    </div>
                     
                    <div class="form-group">
                      <label class="col-lg-2 control-label"> Date of Birth* </label>
                      <div class="col-lg-10">
                      
                         <%= f.date_select :dob ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 0, end_year: Date.today.year - 100},{required: true} %><br /><br />
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-2 control-label singleline "> Date of Joining* </label>
                      <div class="col-lg-10">
                        <%= f.date_select :date_of_join ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 1, end_year: Date.today.year - 100},{required: true} %>
                      </div>
                    </div>
                 </div>
               </section>

                <section class = "panel margin">
                 <div class="panel-body">
                  <div class="col-lg-12">
                    <h4>Contact Details</h4>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Personal Email Id*</label>
                        <div class="col-lg-10">
                          <%= f.text_field :personal_email_id, :class=>"form-control", :value => current_user.email,:readonly => true %><br/>
                        </div>
                      </div>
                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Official Email Id *</label>
                        <div class="col-lg-10">
                          <%= f.text_field :official_email_id, :class=>"form-control" , :required => true %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Skype Id*</label>
                        <div class="col-lg-10">
                          <%= f.text_field :skype_id, :class=>"form-control"  ,:required => true %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Mobile No* </label>
                        <div class="col-lg-10">
                          <%= f.text_field :mobile, :class=>"form-control", :required => true %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Landline No</label>
                        <div class="col-lg-10">
                          <%= f.text_field :landline, :class=>"form-control"  %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Current Address*</label>
                        <div class="col-lg-10">
                          <%= f.text_area :current_address, :class=>"form-control", :required => true, :id => "current_address"%><br/>
                          <input type="checkbox" name="copy1" id="copy_add" onclick="check();">
                          <p> Is permanent address same as current address? </p>
                          <!-- <p>Is permanent address same as corrent address?</p> -->
                        </div>
                      </div>

                      <tr>
                      </tr>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Permanent Address* </label>
                        <div class="col-lg-10">
                          <%= f.text_area :permanent_address, :class=>"form-control" , :required => true, :id => "permanent_address" %><br/>
                        </div>
                      </div>
                    </div>
                    </div>
                  </section>
                  
                <section class = "panel margin">
                  <div class="panel-body">
                    <div class="col-lg-12">
                      <h4>Parent/Guardian Details</h4>
                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Guardian Full Name*</label>
                        <div class="col-lg-10">
                          <%= f.text_field :guardian_full_name, :class=>"form-control",:required => true %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Guardian Mobile No </label>
                        <div class="col-lg-10">
                          <%= f.text_field :guardian_mobile, :class=>"form-control" %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Guardian Landline No </label>
                        <div class="col-lg-10">
                          <%= f.text_field :guardian_landline, :class=>"form-control" %><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Guardian Address* </label>
                        <div class="col-lg-10">
                          <%= f.text_area :guardian_address, :class=>"form-control" , :required => true %><br/>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <center><button class="btn btn-shadow btn-danger" type="submit">Save</button>
                        <button class="btn btn-shadow btn-default btn-md" type="reset">Reset</button>
                        </center>
                      </div>
                    </div>
                  </div>
                  </form>
                </div>
              </section>
              </div>
            <% end %>
          </section>
        </div>
    </section>
  </section>
</section>
<script type="text/javascript">
  function check(){	
  	if($("#copy_add").is(':checked'))
  	 {
  	  $('#permanent_address').val($('#current_address').val()).attr('readonly', true);
  	 }
  	else
  	 {
  	   $('#permanent_address').val("").attr('readonly', false);
  	 }
  }

  $(document).ready(function(){
    $("#date_of_birth").datepicker({ 
      format: "dd/mm/yyyy",
      endDate: '-1d' 
    });
     $("#date_of_joining").datepicker({ 
      format: "dd/mm/yyyy",
      startDate: '+d'
    });
  });  
</script>
