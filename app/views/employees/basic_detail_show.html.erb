]<section id="main-content">
  <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading"><h4>Your Details</h4></header>
          <table class="table table-striped table-condensed">
            <tr>
              <strong>
                <th colspan="2" class="list-group-item-info"><b>BASIC DETAILS</b></th>
              </strong>
            <tr>
             <th>Profile Picture</th>
            </tr>

            <tr>
              <th>First Name</th>
                <td><%= @employee.firstname.titleize %></td>
            </tr>

            <tr>
              <th>Last Name </th>
              <td><%= @employee.lastname.titleize %></td>
            </tr>

            <tr>
              <th>Date Of Birth </th>
              <td><%= @employee.dob %></td>
            </tr>

            <tr>
              <th>Date Of Joining</th>
              <td><%= @employee.date_of_join %></td>
            </tr>

            <tr>
              <th>Blood Group</th>
              <td><%= @employee.blood_group %></td>
            </tr>
            
           
            </section>

            <section class="panel">
            <tr>
              <strong>
                <th colspan="2" class="list-group-item-info">CONTACT DETAILS</th>
              </strong>
            </tr>
            <tr>
              <th>Personal Email Id</th>
              <td><%= @employee.personal_email_id %></td>
            </tr>
            <tr>
              <th>Official Email Id</th>
              <td><%= @employee.official_email_id %></td>
            </tr>
            <tr>
              <th>Skype Id</th>
              <td><%= @employee.skype_id %></td>
            </tr>
            <tr>
              <th>Mobile No</th>
              <td><%= @employee.mobile %></td>
            </tr>
            <tr>
              <th>Landline No</th>
              <td><%= @employee.landline %></td>
            </tr>
            <tr>
              <th>Current Address</th>
              <td><%= @employee.current_address %></td>
            </tr>
            <tr>
              <th>Permanent Address</th>
              <td><%= @employee.permanent_address %></td>
            </tr>
            </section>

            <section class="panel">
                <strong>
                  <th colspan="2" class="list-group-item-info ">PARENTS & GAURDIAN DETAILS</th>
                </strong>
            <tr>
            <th>Guardian Full Name </th>
            <td><%= @employee.guardian_full_name.titleize %></td>
            </tr>
            <tr>
              <th>Guardian Mobile No</th>
              <td><%= @employee.guardian_mobile %></td>
            </tr>
            <tr>
              <th>Guardian Landline No</th>
              <td><%= @employee.guardian_landline %></td>
            </tr>
            <tr>
              <th>Guardian Address</th>
              <td><%= @employee.guardian_address %></td>
            </tr>
            </section>
          </table>
          <h4 class="heading4"><%= link_to "Edit",basic_detail_edit_user_employees_path(current_user,@employee) ,class: "btn btn-shadow btn-info btn-xs"%></h4>
          <br/>
      </div>
    </div>
  </section>
</section>
