<section id="main-content">
  <section class="wrapper">
    <section class="panel">
      <div class="col-lg-12">
        <section class="panel" id="panel-margin">
          <header class="panel-heading">Edit Your Project Details</header>
          <%= form_for @project, :url => project_update_user_employees_path(current_user,:projectdetail => @project.id) do |f| %>
            <div class="panel-body">
              <div class="form" >
                <% if @project.errors.any? %>
                  <div id="error_explanation" class ="alert alert-danger">
                    <ul>
                      <% @project.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class=" form col-lg-12">
                  <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Project Name* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :project_name, :class=>"form-control",:required => true%></br>
                      </div>
                    </div>

                    <div class="form-group ">
                        <label class="col-lg-2 control-label">Team Lead Name*</label>
                        <div class="col-lg-10">
                          <%= f.text_field :team_lead_name,:class=>"form-control",:required => true%></br>
                        </div>
                    </div>

                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Your Role* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :your_role,  :class=>"form-control",:required => true%></br>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Project URL </label>
                      <div class="col-lg-10">
                        <%= f.text_field :project_url,  :class=>"form-control"%></br> 
                      </div>
                    </div>
                     <div class="form-group ">
                        <label class="col-lg-2 control-label">Project Duration</label>
                        <div class="col-lg-10">
                          <%= f.text_field :duration,:class=>"form-control",:required => true%></br>
                        </div>
                      </div>
                      
                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Project Start Date* </label>
                        <div class="col-lg-10">
                          <%= f.date_select :project_start_date ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year + 20, end_year: Date.today.year - 10} , {required: true}%><br /><br/>
                        </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-2 control-label"> Project End Date* </label>
                        <div class="col-lg-10">
                          <%= f.date_select :project_end_date ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year + 20, end_year: Date.today.year-10} , {required: true}%><br /><br/>
                        </div>
                      </div>
                      
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Project Description* </label>
                      <div class="col-lg-10">
                        <%= f.text_area :description, :rows=>4, :cols=>25,  :class=>"form-control",:required => true%></br> 
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Technical Stack </label>
                      <div class="col-lg-10">
                        <%= f.text_field :technology,  :class=>"form-control"%></br> 
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Client Name </label>
                      <div class="col-lg-10">
                        <%= f.text_field :client_name, :class=>"form-control"%></br> 
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Company Name* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :company_name,:class=>"form-control",:required => true %></br> 
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <center>
                          <button class="btn btn-shadow btn-danger" type="submit">Update</button>
                        </center>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          <% end %>
        </section>
      </div>
    </section>
  </section>
</section>

