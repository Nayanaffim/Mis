<section id="main-content">
  <section class="wrapper">
    <section class="panel">
      <div class="col-lg-12">
       <section class="panel" id="panel-margin">
        <header class="panel-heading"><h4>Fill Your Bank Details</h4></header>
        <%= form_for @bank, :url => bank_detail_create_user_employees_path(current_user) do |f| %>
          <div class=" col-lg-3"></div>
           <div class="panel-body">
            <div class="form">
              <%if @bank.errors.any? %>
               <div id="error_explanation" class ="alert alert-danger">
                <ul>
                  <% @bank.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                 </ul>
               </div>
              <% end %>

              <div class=" form col-lg-12">
                <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                  <!-- <div class="form-group "> -->
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Bank Account No* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :account_no, :class =>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Bank Name* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :bank_name,  :class=>"form-control", :required => true %><br />
                      </div>
                    </div>

                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> Branch Name* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :branch_name,  :class=>"form-control", :required => true  %><br />
                      </div>
                    </div>

                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> City* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :city, :class=>"form-control" %><br />
                      </div>
                    </div>

                    <div class="form-group ">
                      <label class="col-lg-2 control-label"> IFSC Code* </label>
                      <div class="col-lg-10">
                        <%= f.text_field :ifsc_code,  :class=>"form-control", :required => true, :placeholder => "Enter 11 digits"  %><br />
                      </div>
                    </div>
                  </section>
                  
                    <section class = "panel margin_panel">
                      <div class="panel-body">
                        <div class="col-lg-12">
                          <header class="panel-heading bottom"><h4>Fill Your Identity Details</h4></header>
                         <section class="panel" id="panel-margin">   
                         

                          <div class="form-group ">
                            <label class="col-lg-2 control-label"> Pancard No* </label>
                            <div class="col-lg-10">
                              <%= f.text_field :pancard_no,  :class=>"form-control", :required => true, :placeholder => "Example:-VWXYZ1234X" %><br />
                            </div>
                          </div>

                          <div class="form-group ">
                            <label class="col-lg-2 control-label"> Passport No</label>
                            <div class="col-lg-10">
                              <%= f.text_field :passport_no,  :class=>"form-control" %><br />
                            </div>
                          </div>

                          <div class="form-group ">
                            <label class="col-lg-2 control-label"> UID No(Adhar card)</label>
                            <div class="col-lg-10">
                              <%= f.text_field :uid_no,  :class=>"form-control", :placeholder =>"enter 12 characters"%><br />
                            </div>
                          </div>
                       
                        <div class="form-group">
                          <div class="col-lg-offset-2 col-lg-10">
                            <center><button class="btn btn-shadow btn-danger" type="submit">Save</button>
                              <button class="btn btn-shadow btn-default btn-md" type="reset">Reset</button>
                            </center>
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
                </form>
              </div>

            </div>
          <% end %>
        </div>
  </section>
</section>
