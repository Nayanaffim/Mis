<section id="main-content">
  <section class="wrapper">
    <div class="row">
     <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading"><h4>Your Academic Details</h4>
         <span class="pull-right button"><%= link_to "Add More", academic_detail_new_user_employees_path(current_user), class: "btn btn-shadow btn-info btn-sm" %>
         </span>
        </header>

        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Course Name</th>
              <th>University/Board Name</th>
              <th>Stream</th>
              <th>Passing Year</th>
              <th>Percentage</th>
            </tr>
          </thead>
          <tbody>
            <% @academices.each do |academic| %>
              <tr>
                <td><%= academic.course %></td>
                <td><%= academic.university%></td>
                <td><%= academic.stream %></td>
                <td><%= academic.passing_year.strftime("%Y") %></td>
                <td><%= academic.percentage %></td>
                <td><%= link_to "Edit",  academic_detail_edit_user_employees_path(current_user, :academic => academic),class: "btn btn-shadow btn-info btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
     </div>
    </div>
   </section>
  </section>
</section>

